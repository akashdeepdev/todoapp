<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.todo_app.viewmodels.AuthViewModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.auth.LoginFragment"
    android:gravity="center"
    android:background="@color/off_white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_todo_app"
        android:textAlignment="center"
        android:textSize="27sp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/primary"
        android:layout_marginHorizontal="15dp"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_example_com"
        android:text="@={viewModel.email}"
        android:inputType="textEmailAddress"
        android:focusable="true"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/primary"
        android:textColorHint="@android:color/darker_gray"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.password}"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/baseline_visibility_off_24"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/primary"
        android:textColorHint="@android:color/darker_gray"
        android:padding="10dp"
        />
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/buttonLogin"
        android:text="@string/log_in"
        android:backgroundTint="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginBottom="15dp"
        android:onClick="@{()->viewModel.loginUser()}"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="15dp"
        />
    <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/buttonLoginByGoogle"
        android:text="@string/continue_with_google"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginBottom="15dp"
        android:textColor="@color/primary"
        android:drawableLeft="@drawable/googleg_standard_color_18"
        android:layout_marginHorizontal="15dp"
        />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/secondary"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        />
    <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/buttonSignup"
        android:text="@string/create_account"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginBottom="15dp"
        android:textColor="@color/primary"
        android:layout_marginHorizontal="15dp"
        />

</LinearLayout>
</layout>